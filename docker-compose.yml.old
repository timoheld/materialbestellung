version: '3.8'

services:
  mysqldb:
   image: mariadb
   ports: 
     - 3306:3306
   environment:
     - MARIADB_ROOT_PASSWORD=p@ssw0rd1
   volumes:
     - /root/materialbestellung/db/:/var/lib/mysql
     - /root/materialbestellung/dbconfig/:/etc/mysql
  appliaktion:
    image: materialbestellung:v0.3
    ports:
      - 5000:5000
    environment:
      - DATABASE_URL='mariadb+mariadbconnector://root:p@ssw0rd1@materialbestellung-mysqldb-1:3306/materialbestellung'
    volumes:
      #- /root/materialbestellung/:/home/materialbestellung
      - /root/materialbestellung/:/materialbestellung
    depends_on:
      - mysqldb
